{
  "ci": false,
  "packages": [
    "packages/*"
  ],
  "version": "4.0.0-pre.0",
  "command": {
    "bootstrap": {
      "hoist": true,
      "nohoist": [
        "dtslint"
      ]
    },
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": [
    "**/changelog.md",
    "**/CHANGELOG.md",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/test/**",
    "lerna.json",
    "readme.md",
    "package.json"
  ]
}
